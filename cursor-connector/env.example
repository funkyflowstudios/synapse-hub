# Cursor Connector Agent Configuration
# Copy this file to .env and customize for your environment

# RPi Backend Connection
RPI_HOST=localhost
RPI_PORT=8000
RPI_PROTOCOL=http
# RPI_API_KEY=your-api-key-here

# Agent Behavior
# POLL_INTERVAL=2.0
# COMMAND_TIMEOUT=300
# AUTO_START=false

# Cursor Application Settings
# CURSOR_PATH=/Applications/Cursor.app/Contents/MacOS/Cursor
# CURSOR_DETECTION_TIMEOUT=10
# CURSOR_RESPONSE_TIMEOUT=120

# SSH Context Settings
# SSH_CONTEXT_ENABLED=true
# SSH_CONFIG_PATH=~/.ssh/config

# Logging Configuration
LOG_LEVEL=INFO
# LOG_FILE=cursor-connector.log

# Development Settings
DEBUG=false
MOCK_CURSOR=false

# Security Settings
# API_KEY_HEADER=X-API-Key
# SECURE_CONNECTION=false 